@model SolutionPersonnelleTemplate.Models.ViewModels.UtilisateurViewModel

@{
    ViewData["Title"] = "MAJ | Mon Compte ";
}
<h2>Mettre à jour mon compte</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Utilisateur.ApplicationUserID" />
            <div class="form-group">
                <label asp-for="Utilisateur.Pseudo" class="control-label"></label>
                <input id="Utilisateur.Pseudo" name="Utilisateur.Pseudo" value="@Model.Utilisateur.Pseudo" class="form-control" readonly />
                <span asp-validation-for="Utilisateur.Pseudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.Role" class="control-label"></label>
                <input asp-for="Utilisateur.Role" class="form-control" readonly />
                <span asp-validation-for="Utilisateur.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.DateCreationUtilisateur" class="control-label"></label>
                <input id="Utilisateur.DateCreationUtilisateur" name="Utilisateur.DateCreationUtilisateur" value="@Model.Utilisateur.DateCreationUtilisateur" class="form-control" readonly />
                <span asp-validation-for="Utilisateur.DateCreationUtilisateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.DateDeNaissance" class="control-label"></label>

                <input id="Utilisateur.DateDeNaissance" name="Utilisateur.DateDeNaissance" value="@Model.Utilisateur.DateDeNaissance" class="form-control" />
                <span asp-validation-for="Utilisateur.DateDeNaissance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.Email" class="control-label"></label>
                <input asp-for="Utilisateur.Email" asp-value="Email" class="form-control" />
                <span asp-validation-for="Utilisateur.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*Pour l image*@
                <label class="control-label">Avatar</label><br />
                <img src="@ViewBag.ImgPath" class="img-responsive" /><br />
            </div>
            @*Pour l image changer d'image avatar*@
            <div class="form-group">
                <label class="control-label">Changer son Avatar</label><br />
                <input type="file" name="user_image" id="user_image" />
            </div>
            <div class="form-group">
                <input asp-for="Utilisateur.ConfirmEmail" type="hidden" />
                <input asp-for="Utilisateur.ProfilUtilisateurComplet" type="hidden" />
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Acceuil</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}