@model SolutionPersonnelleTemplate.Models.BO.Utilisateur

@{
    ViewData["Title"] = "MAJ | Mon Compte ";
}
<h2>Mettre à jour mon compte</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUserID" />
            <div class="form-group">
                <label asp-for="Pseudo" class="control-label"></label>
                <input id="Pseudo" name="Pseudo" value="@Model.Pseudo" class="form-control" readonly />
                <span asp-validation-for="Pseudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" readonly />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreationUtilisateur" class="control-label"></label>
                <input id="DateCreationUtilisateur" name="DateCreationUtilisateur" value="@Model.DateCreationUtilisateur" class="form-control" readonly />
                <span asp-validation-for="DateCreationUtilisateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDeNaissance" class="control-label"></label>
 
                <input id="DateDeNaissance" name="DateDeNaissance" value="@Model.DateDeNaissance" class="form-control" />
                <span asp-validation-for="DateDeNaissance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" asp-value="Email" class="form-control" />
                 <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @*Pour l image*@
            <div class="form-group">
                <label class="control-label">
                    Avatar | <a asp-controller="Utilisateur"
                                   asp-action="UploadImage"
                                   asp-route-userId="@Model.ApplicationUserID"
                                   asp-route-returnURL="@ViewData["returnURL"]">
                                    Changer son Avatar
                                </a>
                </label><br />
                <img src="@ViewBag.ImgPath" alt="@Model.Pseudo" class="img-responsive" /><br />
                 <input id="UrlAvatarImage" name="UrlAvatarImage" value="@Model.UrlAvatarImage" type="hidden" />
            </div>

            <div class="form-group">
                <input asp-for="ConfirmEmail" type="hidden" />
                <input asp-for="ProfilUtilisateurComplet" type="hidden" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div></div>
<div>
    <a asp-controller="Home" asp-action="Index">Acceuil</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}