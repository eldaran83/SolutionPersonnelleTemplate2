@{
    ViewData["Title"] = "Accueil - Roll a dice";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/carte-village.jpg" alt="carte-village" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Forgez, votre destinée.              
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/chevalier.jpg" alt="chevalier" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Créer votre héros.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/set_de_des.jpg" alt="set_de_des" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Pas besoin de chercher votre bourse de dés.
                </p>
            </div>
        </div>
       
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="col-md-4" >
        <h2 class="text-center text-capitalize" style="background-color:#eee;">Vivez une histoire unique</h2>
        <ul>
            <li><h4>Trouvez une aventure qui vous attire.</h4></li>
            <li><h4>Créer votre héros.</h4></li>
            <li><h4>C'est parti pour une aventure unique !</h4></li>
        </ul>
    </div>

    <div class="col-md-4">
        <h2 class="text-center text-capitalize" style="background-color:#eee;">Pas de dés</h2>
        <h4>Pas besoin de chercher votre bourse de dés,</h4>
        <h4>le moteur du jeu fait tout le boulot</h4>
    </div>
    <div class="col-md-4">
        <h2 class="text-center text-capitalize" style="background-color:#eee;">Publiez vos histoires</h2>
        <h4>Vous avez l'âme d'un conteur ?</h4>
        <h4>Faites en profiter la planète entière en publiant votre aventure</h4>
    </div>
</div>
