@model SolutionPersonnelleTemplate.Models.ViewModels.HistoireViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Mettre à jour l'histoire</h2>

<h4>Histoire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Histoire.HistoireID" />
            <div class="form-group">
                <label asp-for="Histoire.Titre " class="control-label"></label>
                <input asp-for="Histoire.Titre" class="form-control" />
                <span asp-validation-for="Histoire.Titre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Histoire.Synopsis" class="control-label"></label>
                <textarea asp-for="Histoire.Synopsis" cols="80" rows="5" class="form-control"></textarea>
                 <span asp-validation-for="Histoire.Synopsis" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*Pour l image*@
                <label class="control-label">Image de garde</label><br />
                <input id="Histoire.UrlMedia" name="Histoire.UrlMedia" value="@ViewBag.ImgPath" type="hidden" />
                <img src="@ViewBag.ImgPath" class="img-responsive" /><br />
            </div>
            @*Pour l image changer d'image avatar*@
            <div class="form-group">
                <label class="control-label">Changer son Image de garde</label><br />
                <input type="file" name="user_image" id="user_image" />
            </div>

            <div class="form-group">
                <input asp-for="Histoire.Score" class="form-control" type="hidden" />
                <input asp-for="Histoire.NombreDeFoisJouee" class="form-control" type="hidden" />
                <input type="submit" value="Sayvegarder" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

