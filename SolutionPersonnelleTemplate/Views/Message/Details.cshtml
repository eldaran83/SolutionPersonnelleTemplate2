@model SolutionPersonnelleTemplate.Models.BO.Message
@{
    ViewData["Title"] = "Details";
}
<h2>
    Details du message de l'histoire @Model.Histoire.Titre
</h2>
<div>
    <h4>Message</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Contenu)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contenu)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroMessageEnfant1)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroMessageEnfant1)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomAction1)
        </dt>
        <dd>
            <a asp-action="Details" asp-controller="Message" asp-route-messageId="@Model.NumeroMessageEnfant1" asp-route-histoireID="@ViewData["HistoireID"]">@Html.DisplayFor(model => model.NomAction1)</a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroMessageEnfant2)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroMessageEnfant2)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomAction2)
        </dt>
        <dd>
            <a asp-action="Details" asp-controller="Message" asp-route-messageId="@Model.NumeroMessageEnfant2" asp-route-histoireID="@ViewData["HistoireID"]">@Html.DisplayFor(model => model.NomAction2)</a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroMessageEnfant3)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroMessageEnfant3)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomAction3)
        </dt>
        <dd>
            <a asp-action="Details" asp-controller="Message" asp-route-messageId="@Model.NumeroMessageEnfant3" asp-route-histoireID="@ViewData["HistoireID"]">@Html.DisplayFor(model => model.NomAction3)</a>
        </dd>
    </dl>
</div>

<div class="form-group">
    @*Pour l image*@
    <label class="control-label">Image présentation</label><br />
    <img src="@ViewBag.ImgPath" alt="@Model.Titre" class="img-responsive" /><br />
</div>
<div>
    <a asp-action="Edit" asp-controller="Message" asp-route-histoireID="@ViewData["HistoireID"]" asp-route-messageId="@Model.MessageID">Edit</a> |
