@model IEnumerable<SolutionPersonnelleTemplate.Models.BO.Message>

@{
    ViewData["Title"] = "Zone-Manager-Liste Message";
}

<div class="jumbotron" style="background-color: #4881ea;">
    <h1>Zone-Manager-Message</h1>
    <h2>Recueil des messages de l'histoire : @ViewBag.TitreHistoire</h2>
</div>
<p>
    <a asp-action="Create" asp-controller="Message" asp-route-histoireID="@ViewData["HistoireID"]" class="btn  btn-info">Créer un nouveau message pour cette histoire</a>
</p>
    <table class="table">
        <thead>
            <tr>

                <th>
                    N° -  @Html.DisplayNameFor(model => model.Titre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contenu)
                </th>

                <th>
                    N° -  Libellé lien 1
                </th>
                <th>
                    N° - Libellé lien 2
                </th>

                <th>
                    N° -  Libellé lien 3
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.MessageID) - @Html.DisplayFor(modelItem => item.Titre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contenu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroMessageEnfant1)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroMessageEnfant2)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroMessageEnfant3)
                    </td>

                    <td>
                        <img src="@item.UrlMedia" alt="@item.Titre" class="img-responsive" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-messageId="@item.MessageID" asp-route-HistoireID="@item.HistoireID" class="btn btn-block btn-warning">MAJ</a>
                        <a asp-action="Details" asp-route-messageId="@item.MessageID" asp-route-HistoireID="@item.HistoireID" class="btn btn-block btn-info">Détails</a>
                        <a asp-action="Delete" asp-route-messageId="@item.MessageID" asp-route-HistoireID="@item.HistoireID" class="btn btn-block btn-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Index" asp-controller="Histoire">Retour au codex</a>
    </div>
