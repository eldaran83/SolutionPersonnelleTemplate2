@model IEnumerable<SolutionPersonnelleTemplate.Models.BO.Message>

@{
    ViewData["Title"] = "Index";
}

<h2>Recueil des messages de l'histoire      </h2>

<p>
    <a asp-action="Create" asp-controller="Message" asp-route-histoireID="@ViewData["HistoireID"]">Créer un nouveau message pour cette histoire</a>
 </p>
<table class="table">
    <thead>
        <tr>
 
            <th>
                N° -  @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contenu)
            </th>
 
            <th>
                N° -  Libellé lien 1
            </th>

            <th>
              N° - Libellé lien 2
            </th>
 
            <th>
                N° -  Libellé lien 3
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
 
            <td>
                @Html.DisplayFor(modelItem => item.MessageID) - @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contenu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroMessageEnfant1) 
            </td>
 
            <td>
                @Html.DisplayFor(modelItem => item.NumeroMessageEnfant2) 
            </td>
 
            <td>
                @Html.DisplayFor(modelItem => item.NumeroMessageEnfant3) 
            </td>
 
            <td>
                <img src="@item.UrlMedia" alt="@item.Titre" class="img-responsive" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-messageId="@item.MessageID" asp-route-HistoireID="@item.HistoireID">Edit</a> |
                <a asp-action="Details" asp-route-messageId="@item.MessageID" asp-route-HistoireID="@item.HistoireID">Details</a> |
                <a asp-action="Delete" asp-route-messageId="@item.MessageID" asp-route-HistoireID="@item.HistoireID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>

    <a asp-action="Index" asp-controller="Histoire">Retour au codex</a>
</div>